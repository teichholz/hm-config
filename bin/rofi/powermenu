#!/usr/bin/env sh

rofi_command="rofi -theme theme/powermenu.rasi"

### Options ###
power_off="\tShutdown"
reboot="\tReboot"
lock="\tLock"
suspend="鈴\tSleep"
log_out="\tLogout"
# Variable passed to rofi
options="$power_off\n$suspend\n$reboot\n$log_out"
selection="$(echo -e "$options" | $rofi_command -dmenu -selected-row 0)"
snd () {
    echo "$1" | cut -f2
}
selection=$(snd "$selection")

case "$selection" in
    "Shutdown")
        poweroff
        ;;
    "Sleep")
        systemctl suspend
        ;;
    "Reboot")
        systemctl reboot
        ;;
    "Logout")
        bspc quit
        ;;
    *)
        echo "Selected: $selection"
        ;;
esac
